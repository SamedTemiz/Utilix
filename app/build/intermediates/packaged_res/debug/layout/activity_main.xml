<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/title_settings"
        android:src="@drawable/ic_settings"
        app:backgroundTint="@color/button_orange"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp"
            android:useDefaultMargins="true"
            android:rowCount="7">

            <!-- Card 1: Flashlight -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFlashlight"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconFlashlight"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_flashlight"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textFlashlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_flashlight"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Vibration -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardVibrate"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconVibrate"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_vibration"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textVibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_vibrate"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: Screen Light -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardScreenLight"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconScreenLight"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_screen_light"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textScreenLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_screen_light"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Card 4: Water Eject -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardWaterEject"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconWaterEject"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_water_drop"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textWaterEject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_water_eject"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 5: Media Mute -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMediaMute"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconMediaMute"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_mute"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textMediaMute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_system"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 6: Dice Roll -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDice"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconDice"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_dice"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textDice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_decision"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Card 7: Tally Counter -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTally"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                     <ImageView
                        android:id="@+id/iconTally"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_counter"
                        android:layout_marginBottom="4dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COUNTER"
                        android:textColor="@color/text_passive"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    
                    <TextView
                        android:id="@+id/textTallyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Card 8: QR Scanner -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardQr"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconQr"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_qr_scan"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textQr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_qr"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 9: Mirror -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMirror"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconMirror"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_mirror"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textMirror"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_mirror"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 10: Magnifier -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMagnifier"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconMagnifier"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_magnifier"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textMagnifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_magnifier"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 11: Ruler & Level -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRuler"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconRuler"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_ruler"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textRuler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_ruler"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 12: Dead Pixel Test -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDeadPixel"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconDeadPixel"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_pixel_test"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textDeadPixel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pixel Test"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 13: Keep Awake -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardKeepAwake"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iconKeepAwake"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_circle_inactive"
                        android:src="@drawable/ic_keep_awake"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:id="@+id/textKeepAwake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_screen_on"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>
    <!-- Overlay for Screen Light mode -->
    <View
        android:id="@+id/overlayScreenLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>
