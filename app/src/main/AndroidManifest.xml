<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".UtilixApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_utilix_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_utilix_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.UtilityBelt"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".OnboardingActivity"
            android:theme="@style/Theme.UtilityBelt"
            android:screenOrientation="portrait"/>
        <activity android:name=".QrScannerActivity" />
        <activity 
            android:name=".MirrorActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar"/>
        <activity android:name=".QrResultActivity" />
        <activity android:name=".MagnifierActivity" />
        <activity android:name=".RulerLevelActivity" />
        <activity android:name=".DeadPixelActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_settings"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>
